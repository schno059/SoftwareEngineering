<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:paddingBottom="5dp"
    android:layout_weight="100"
    tools:ignore="ContentDescription">


    <TextView
        android:id="@+id/marker_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Club"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/marker_photo"
        app:layout_constraintTop_toTopOf="@+id/marker_photo" />

    <TextView
        android:id="@+id/marker_event_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Event :"
        app:autoSizeTextType="none"
        app:layout_constraintEnd_toEndOf="@+id/marker_name"
        app:layout_constraintStart_toStartOf="@+id/marker_name"
        app:layout_constraintTop_toBottomOf="@+id/marker_name" />

    <TextView
        android:id="@+id/marker_location"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/location"
        app:layout_constraintEnd_toEndOf="@+id/marker_time"
        app:layout_constraintStart_toStartOf="@+id/marker_time"
        app:layout_constraintTop_toBottomOf="@+id/marker_time" />

    <TextView
        android:id="@+id/marker_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/meeting_time"
        app:layout_constraintEnd_toEndOf="@+id/marker_event_name"
        app:layout_constraintStart_toStartOf="@+id/marker_event_name"
        app:layout_constraintTop_toBottomOf="@+id/marker_event_name" />

    <TextView
        android:id="@+id/marker_description"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/description"
        app:layout_constraintEnd_toEndOf="@+id/marker_location"
        app:layout_constraintStart_toStartOf="@+id/marker_photo"
        app:layout_constraintTop_toBottomOf="@+id/marker_location" />

    <ImageView
        android:id="@+id/marker_photo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bulldoglogo" />

</androidx.constraintlayout.widget.ConstraintLayout>